{
  "include": ["**/*.ts", "**/*.d.ts"],

  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "es2024",
    "module": "esnext",
    "lib": ["es2024", "dom"],
    "moduleResolution": "node",
    "incremental": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
